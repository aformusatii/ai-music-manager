{
  "version": "0.2.0",
  "configurations": [
  
    {
      // Run/Debug Node server (dev:server)
      "type": "node",
      "request": "launch",
      "name": "Dev Server (node --watch)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev", "--workspace", "backend"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      // Run Vite dev server (dev:client)
      // Typically you don't debug this as a Node process, you just start it.
      "type": "node",
      "request": "launch",
      "name": "Vite Client (vite dev)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev", "--workspace", "frontend"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ],

  "compounds": [
    {
      "name": "Dev: Server + Client",
      "configurations": [
        "Dev Server (node --watch)",
        "Vite Client (vite dev)"
      ]
    }
  ]
}